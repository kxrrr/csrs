<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kxr.csrs.mapper.UserMapper">

    <update id="updateStockByUsername">
        update user set stock = stock + #{stock} where username = #{username} and cname = #{cname}
    </update>
</mapper>